@page "{period:int}/{year:int}"
@model TestModule.Pages.PeriodPages.EditModel
@{
    ViewData["Title"] = "Edit Period";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow-sm">
            <div class="card-header bg-warning text-dark py-3">
                <h4 class="mb-0">
                    <i class="fas fa-edit me-2"></i>Edit Period
                </h4>
            </div>
            <div class="card-body p-4">
                <form method="post" class="needs-validation" novalidate>
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <input type="hidden" asp-for="OriginalPeriod" />
                    <input type="hidden" asp-for="OriginalYear" />

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Item.PeriodNum" class="form-label fw-semibold">
                                <i class="fas fa-hashtag me-1 text-muted"></i>Period Number
                            </label>
                            <input asp-for="Item.PeriodNum" class="form-control" placeholder="Enter period number" />
                            <span asp-validation-for="Item.PeriodNum" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Item.Month" class="form-label fw-semibold">
                                <i class="fas fa-calendar me-1 text-muted"></i>Month
                            </label>
                            <input asp-for="Item.Month" class="form-control" placeholder="Enter month (1-12)" />
                            <span asp-validation-for="Item.Month" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Item.Year" class="form-label fw-semibold">
                                <i class="fas fa-calendar-alt me-1 text-muted"></i>Year
                            </label>
                            <input asp-for="Item.Year" class="form-control" placeholder="Enter year" />
                            <span asp-validation-for="Item.Year" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Item.StartDate" class="form-label fw-semibold">
                                <i class="fas fa-play-circle me-1 text-muted"></i>Start Date
                            </label>
                            <input asp-for="Item.StartDate" type="date" class="form-control" />
                            <span asp-validation-for="Item.StartDate" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Item.EndDate" class="form-label fw-semibold">
                                <i class="fas fa-stop-circle me-1 text-muted"></i>End Date
                            </label>
                            <input asp-for="Item.EndDate" type="date" class="form-control" />
                            <span asp-validation-for="Item.EndDate" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <div class="form-check form-switch mt-4 pt-2">
                                <input asp-for="Item.IsCurrent" class="form-check-input" type="checkbox" role="switch" />
                                <label asp-for="Item.IsCurrent" class="form-check-label fw-semibold">
                                    <i class="fas fa-star me-1 text-warning"></i>Set as Current Period
                                </label>
                            </div>
                            <span asp-validation-for="Item.IsCurrent" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="d-flex gap-2 justify-content-end mt-4 pt-2 border-top">
                        <a asp-page="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-times me-1"></i>Cancel
                        </a>
                        <button type="submit" class="btn btn-warning">
                            <i class="fas fa-save me-1"></i>Update Period
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Additional Info Card -->
        <div class="card mt-4 border-info">
            <div class="card-header bg-info text-white py-2">
                <h6 class="mb-0">
                    <i class="fas fa-info-circle me-1"></i>Editing Details
                </h6>
            </div>
            <div class="card-body py-3">
                <div class="row">
                    <div class="col-md-6">
                        <small class="text-muted">
                            <i class="fas fa-hashtag me-1"></i>Original Period: <strong>@Model.OriginalPeriod</strong>
                        </small>
                    </div>
                    <div class="col-md-6">
                        <small class="text-muted">
                            <i class="fas fa-calendar-alt me-1"></i>Original Year: <strong>@Model.OriginalYear</strong>
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<partial name="_ValidationScriptsPartial" />

<style>
    .form-control:focus {
        border-color: #f39c12;
        box-shadow: 0 0 0 0.2rem rgba(243, 156, 18, 0.25);
    }

    .form-label {
        color: #2c3e50;
        font-weight: 600;
    }

    .card {
        border: none;
        border-radius: 15px;
    }

    .card-header {
        border-radius: 15px 15px 0 0 !important;
    }

    .btn {
        border-radius: 8px;
        padding: 0.5rem 1.5rem;
        font-weight: 600;
    }

    .btn-warning {
        background: linear-gradient(135deg, #f39c12 0%, #e67e22 100%);
        border: none;
        color: white;
    }

        .btn-warning:hover {
            background: linear-gradient(135deg, #e67e22 0%, #f39c12 100%);
            transform: translateY(-2px);
            color: white;
        }

    .form-switch .form-check-input:checked {
        background-color: #f39c12;
        border-color: #f39c12;
    }

    .bg-warning {
        background: linear-gradient(135deg, #f39c12 0%, #e67e22 100%) !important;
    }

    .border-info {
        border: 1px solid #17a2b8 !important;
    }

    .bg-info {
        background: linear-gradient(135deg, #17a2b8 0%, #2c3e50 100%) !important;
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Add validation styling
            $('form').on('submit', function() {
                $(this).addClass('was-validated');
            });

            // Add some interactivity to form controls
            $('.form-control').focus(function() {
                $(this).parent().addClass('focus-shadow');
            }).blur(function() {
                $(this).parent().removeClass('focus-shadow');
            });
        });
    </script>
}