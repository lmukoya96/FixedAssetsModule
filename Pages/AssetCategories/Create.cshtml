@page
@model TestModule.Pages.AssetCategories.CreateModel
@{
    ViewData["Title"] = "Create Asset Category";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow-sm">
            <div class="card-header bg-success text-white py-3">
                <h4 class="mb-0">
                    <i class="fas fa-plus-circle me-2"></i>Create New Asset Category
                </h4>
            </div>
            <div class="card-body p-4">
                <form method="post" class="needs-validation" novalidate>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Item.CategoryCode" class="form-label fw-semibold">
                                <i class="fas fa-hashtag me-1 text-muted"></i>Category Code
                            </label>
                            <input asp-for="Item.CategoryCode" class="form-control" placeholder= />
                            <span asp-validation-for="Item.CategoryCode" class="text-danger small"></span>
                            <div class="form-text">Unique identifier for the category</div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Item.CategoryDescription" class="form-label fw-semibold">
                                <i class="fas fa-file-alt me-1 text-muted"></i>Category Description
                            </label>
                            <input asp-for="Item.CategoryDescription" class="form-control" />
                            <span asp-validation-for="Item.CategoryDescription" class="text-danger small"></span>
                            <div class="form-text">Descriptive name for the category</div>
                        </div>
                    </div>

                    <div class="d-flex gap-2 justify-content-end mt-4 pt-2 border-top">
                        <a asp-page="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-times me-1"></i>Cancel
                        </a>
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-save me-1"></i>Create Category
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<partial name="_ValidationScriptsPartial" />

<style>
    .form-control:focus {
        border-color: #28a745;
        box-shadow: 0 0 0 0.2rem rgba(40, 167, 69, 0.25);
    }
    
    .form-label {
        color: #2c3e50;
        font-weight: 600;
    }
    
    .card {
        border: none;
        border-radius: 15px;
    }
    
    .card-header {
        border-radius: 15px 15px 0 0 !important;
    }
    
    .btn {
        border-radius: 8px;
        padding: 0.5rem 1.5rem;
        font-weight: 600;
    }
    
    .btn-success {
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
        border: none;
    }
    
    .btn-success:hover {
        background: linear-gradient(135deg, #20c997 0%, #28a745 100%);
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(40, 167, 69, 0.3);
    }
    
    .btn-outline-secondary:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    
    .bg-success {
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%) !important;
    }
    
    .border-info {
        border: 1px solid #17a2b8 !important;
    }
    
    .bg-info {
        background: linear-gradient(135deg, #17a2b8 0%, #2c3e50 100%) !important;
    }
    
    .border-primary {
        border: 1px solid #007bff !important;
    }
    
    .bg-primary {
        background: linear-gradient(135deg, #007bff 0%, #0056b3 100%) !important;
    }
    
    .border-top {
        border-color: #e9ecef !important;
    }
    
    .form-text {
        font-size: 0.8rem;
        color: #6c757d;
        margin-top: 0.25rem;
    }
    
    code {
        background-color: #f8f9fa;
        padding: 0.2rem 0.4rem;
        border-radius: 4px;
        font-size: 0.85em;
        color: #e83e8c;
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Add validation styling
            $('form').on('submit', function() {
                $(this).addClass('was-validated');
            });
            
            // Add focus effects
            $('.form-control').focus(function() {
                $(this).parent().addClass('focus-shadow');
            }).blur(function() {
                $(this).parent().removeClass('focus-shadow');
            });
            
            // Auto-format category code to uppercase
            $('#Item_CategoryCode').on('blur', function() {
                this.value = this.value.toUpperCase().replace(/\s+/g, '-');
            });
            
            // Auto-capitalize category description
            $('#Item_CategoryDescription').on('blur', function() {
                if (this.value) {
                    this.value = this.value.replace(/\w\S*/g, function(txt) {
                        return txt.charAt(0).toUpperCase() + txt.substr(1).toLowerCase();
                    });
                }
            });
            
            // Character limit indicator for category code
            $('#Item_CategoryCode').on('input', function() {
                const maxLength = 10;
                const currentLength = this.value.length;
                const helpText = $(this).siblings('.form-text');
                
                if (currentLength > maxLength) {
                    this.value = this.value.substring(0, maxLength);
                    helpText.html('<span class="text-danger">Maximum 10 characters reached</span>');
                } else {
                    helpText.html(`Unique identifier for the category (${maxLength - currentLength} characters remaining)`);
                }
            });
            
            // Suggest common categories
            $('#Item_CategoryCode').on('focus', function() {
                $(this).attr('list', 'categoryCodes');
            });
            
            $('#Item_CategoryDescription').on('focus', function() {
                $(this).attr('list', 'categoryDescriptions');
            });
        });
    </script>
}