@page "{code}"
@model TestModule.Pages.AssetCategories.EditModel
@{
    ViewData["Title"] = "Edit Asset Category";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow-sm">
            <div class="card-header bg-warning text-dark py-3">
                <h4 class="mb-0">
                    <i class="fas fa-edit me-2"></i>Edit Asset Category
                </h4>
            </div>
            <div class="card-body p-4">
                <form method="post" class="needs-validation" novalidate>
                    <input type="hidden" asp-for="OriginalCode" />

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Item.CategoryCode" class="form-label fw-semibold">
                                <i class="fas fa-hashtag me-1 text-muted"></i>Category Code
                            </label>
                            <input asp-for="Item.CategoryCode" class="form-control" placeholder="e.g., IT-EQPT, VEHICLE, FURNITURE" />
                            <span asp-validation-for="Item.CategoryCode" class="text-danger small"></span>
                            <div class="form-text">Unique identifier for the category</div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Item.CategoryDescription" class="form-label fw-semibold">
                                <i class="fas fa-file-alt me-1 text-muted"></i>Category Description
                            </label>
                            <input asp-for="Item.CategoryDescription" class="form-control" placeholder="e.g., IT Equipment, Company Vehicles, Office Furniture" />
                            <span asp-validation-for="Item.CategoryDescription" class="text-danger small"></span>
                            <div class="form-text">Descriptive name for the category</div>
                        </div>
                    </div>

                    <div class="d-flex gap-2 justify-content-end mt-4 pt-2 border-top">
                        <a asp-page="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-times me-1"></i>Cancel
                        </a>
                        <button type="submit" class="btn btn-warning">
                            <i class="fas fa-save me-1"></i>Update Category
                        </button>
                    </div>
                </form>
            </div>
        </div>
        
        <!-- Additional Info Card -->
        <div class="card mt-4 border-info">
            <div class="card-header bg-info text-white py-2">
                <h6 class="mb-0">
                    <i class="fas fa-info-circle me-1"></i>Editing Details
                </h6>
            </div>
            <div class="card-body py-3">
                <div class="row">
                    <div class="col-md-12">
                        <small class="text-muted">
                            <i class="fas fa-hashtag me-1"></i>Original Category Code: <strong>@Model.OriginalCode</strong>
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<partial name="_ValidationScriptsPartial" />

<style>
    .form-control:focus {
        border-color: #f39c12;
        box-shadow: 0 0 0 0.2rem rgba(243, 156, 18, 0.25);
    }
    
    .form-label {
        color: #2c3e50;
        font-weight: 600;
    }
    
    .card {
        border: none;
        border-radius: 15px;
    }
    
    .card-header {
        border-radius: 15px 15px 0 0 !important;
    }
    
    .btn {
        border-radius: 8px;
        padding: 0.5rem 1.5rem;
        font-weight: 600;
    }
    
    .btn-warning {
        background: linear-gradient(135deg, #f39c12 0%, #e67e22 100%);
        border: none;
        color: white;
    }
    
    .btn-warning:hover {
        background: linear-gradient(135deg, #e67e22 0%, #f39c12 100%);
        transform: translateY(-2px);
        color: white;
        box-shadow: 0 4px 8px rgba(243, 156, 18, 0.3);
    }
    
    .btn-outline-secondary:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    
    .bg-warning {
        background: linear-gradient(135deg, #f39c12 0%, #e67e22 100%) !important;
    }
    
    .border-info {
        border: 1px solid #17a2b8 !important;
    }
    
    .bg-info {
        background: linear-gradient(135deg, #17a2b8 0%, #2c3e50 100%) !important;
    }
    
    .border-success {
        border: 1px solid #28a745 !important;
    }
    
    .bg-success {
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%) !important;
    }
    
    .border-primary {
        border: 1px solid #007bff !important;
    }
    
    .bg-primary {
        background: linear-gradient(135deg, #007bff 0%, #0056b3 100%) !important;
    }
    
    .border-top {
        border-color: #e9ecef !important;
    }
    
    .form-text {
        font-size: 0.8rem;
        color: #6c757d;
        margin-top: 0.25rem;
    }
    
    code {
        background-color: #f8f9fa;
        padding: 0.2rem 0.4rem;
        border-radius: 4px;
        font-size: 0.85em;
        color: #e83e8c;
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Add validation styling
            $('form').on('submit', function() {
                $(this).addClass('was-validated');
            });
            
            // Add focus effects
            $('.form-control').focus(function() {
                $(this).parent().addClass('focus-shadow');
            }).blur(function() {
                $(this).parent().removeClass('focus-shadow');
            });
            
            // Auto-format category code to uppercase
            $('#Item_CategoryCode').on('blur', function() {
                this.value = this.value.toUpperCase().replace(/\s+/g, '-');
            });
            
            // Auto-capitalize category description
            $('#Item_CategoryDescription').on('blur', function() {
                if (this.value) {
                    this.value = this.value.replace(/\w\S*/g, function(txt) {
                        return txt.charAt(0).toUpperCase() + txt.substr(1).toLowerCase();
                    });
                }
            });
            
            // Suggest common categories
            $('#Item_CategoryCode').on('focus', function() {
                $(this).attr('list', 'categoryCodes');
            });
            
            $('#Item_CategoryDescription').on('focus', function() {
                $(this).attr('list', 'categoryDescriptions');
            });
        });
    </script>
}