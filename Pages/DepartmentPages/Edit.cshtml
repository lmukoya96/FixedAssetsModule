@page "{code}"
@model TestModule.Pages.DepartmentPages.EditModel
@{
    ViewData["Title"] = "Edit Department";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow-sm">
            <div class="card-header bg-warning text-dark py-3">
                <h4 class="mb-0">
                    <i class="fas fa-edit me-2"></i>Edit Department
                </h4>
            </div>
            <div class="card-body p-4">
                <form method="post" class="needs-validation" novalidate>
                    <input type="hidden" asp-for="OriginalCode" />

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Item.DepartmentCode" class="form-label fw-semibold">
                                <i class="fas fa-hashtag me-1 text-muted"></i>Department Code
                            </label>
                            <input asp-for="Item.DepartmentCode" class="form-control" placeholder="Enter department code" />
                            <span asp-validation-for="Item.DepartmentCode" class="text-danger small"></span>
                            <div class="form-text">Unique identifier for the department</div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Item.DepartmentName" class="form-label fw-semibold">
                                <i class="fas fa-signature me-1 text-muted"></i>Department Name
                            </label>
                            <input asp-for="Item.DepartmentName" class="form-control" placeholder="Enter department name" />
                            <span asp-validation-for="Item.DepartmentName" class="text-danger small"></span>
                            <div class="form-text">Full name of the department</div>
                        </div>
                    </div>

                    <div class="d-flex gap-2 justify-content-end mt-4 pt-2 border-top">
                        <a asp-page="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-times me-1"></i>Cancel
                        </a>
                        <button type="submit" class="btn btn-warning">
                            <i class="fas fa-save me-1"></i>Update Department
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<partial name="_ValidationScriptsPartial" />

<style>
    .form-control:focus {
        border-color: #f39c12;
        box-shadow: 0 0 0 0.2rem rgba(243, 156, 18, 0.25);
    }

    .form-label {
        color: #2c3e50;
        font-weight: 600;
    }

    .card {
        border: none;
        border-radius: 15px;
    }

    .card-header {
        border-radius: 15px 15px 0 0 !important;
    }

    .btn {
        border-radius: 8px;
        padding: 0.5rem 1.5rem;
        font-weight: 600;
    }

    .btn-warning {
        background: linear-gradient(135deg, #f39c12 0%, #e67e22 100%);
        border: none;
        color: white;
    }

        .btn-warning:hover {
            background: linear-gradient(135deg, #e67e22 0%, #f39c12 100%);
            transform: translateY(-2px);
            color: white;
            box-shadow: 0 4px 8px rgba(243, 156, 18, 0.3);
        }

    .btn-outline-secondary:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .bg-warning {
        background: linear-gradient(135deg, #f39c12 0%, #e67e22 100%) !important;
    }

    .border-info {
        border: 1px solid #17a2b8 !important;
    }

    .bg-info {
        background: linear-gradient(135deg, #17a2b8 0%, #2c3e50 100%) !important;
    }

    .border-success {
        border: 1px solid #28a745 !important;
    }

    .bg-success {
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%) !important;
    }

    .border-top {
        border-color: #e9ecef !important;
    }

    .form-text {
        font-size: 0.8rem;
        color: #6c757d;
        margin-top: 0.25rem;
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Add validation styling
            $('form').on('submit', function() {
                $(this).addClass('was-validated');
            });

            // Add focus effects
            $('.form-control').focus(function() {
                $(this).parent().addClass('focus-shadow');
            }).blur(function() {
                $(this).parent().removeClass('focus-shadow');
            });

            // Auto-format department code to uppercase
            $('#Item_DepartmentCode').on('blur', function() {
                this.value = this.value.toUpperCase();
            });

            // Auto-capitalize department name
            $('#Item_DepartmentName').on('blur', function() {
                if (this.value) {
                    this.value = this.value.charAt(0).toUpperCase() + this.value.slice(1);
                }
            });
        });
    </script>
}