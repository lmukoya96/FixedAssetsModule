@page "{departmentCode}"
@model TestModule.Pages.DepartmentPages.DeleteModel
@{
    ViewData["Title"] = "Delete Department";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card border-danger shadow-lg">
            <div class="card-header bg-danger text-white py-3">
                <h4 class="mb-0">
                    <i class="fas fa-trash-alt me-2"></i>Delete Department
                </h4>
            </div>
            <div class="card-body p-4">
                @if (Model.Item is null)
                {
                    <div class="alert alert-danger d-flex align-items-center">
                        <i class="fas fa-exclamation-circle me-3 fa-2x"></i>
                        <div>
                            <h5 class="alert-heading mb-1">Department Not Found</h5>
                            <p class="mb-0">The requested department could not be found in the system.</p>
                        </div>
                    </div>
                    <div class="text-center mt-4">
                        <a asp-page="Index" class="btn btn-primary">
                            <i class="fas fa-arrow-left me-2"></i>Back to Departments
                        </a>
                    </div>
                }
                else
                {
                    <div class="alert alert-warning">
                        <div class="d-flex">
                            <i class="fas fa-exclamation-triangle me-3 fa-2x mt-1"></i>
                            <div>
                                <h5 class="alert-heading">Warning: This action cannot be undone!</h5>
                                <p class="mb-0">You are about to permanently delete this department. This may affect employee assignments and organizational structure.</p>
                            </div>
                        </div>
                    </div>

                    <div class="border rounded-3 p-4 mb-4 bg-light">
                        <h5 class="text-danger mb-4">
                            <i class="fas fa-building me-2"></i>Department Details
                        </h5>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label fw-semibold text-muted">
                                        <i class="fas fa-hashtag me-1"></i>Department Code
                                    </label>
                                    <p class="fs-5 fw-bold text-dark">
                                        <i class="fas fa-building text-primary me-2"></i>@Model.Item.DepartmentCode
                                    </p>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label fw-semibold text-muted">
                                        <i class="fas fa-signature me-1"></i>Department Name
                                    </label>
                                    <p class="fs-5 fw-bold text-dark">
                                        <i class="fas fa-users text-info me-2"></i>@Model.Item.DepartmentName
                                    </p>
                                </div>
                            </div>
                        </div>

                        <!-- Impact Warning -->
                        <div class="alert alert-danger mt-3">
                            <div class="d-flex">
                                <i class="fas fa-exclamation-circle me-3"></i>
                                <div>
                                    <h6 class="alert-heading mb-1">Potential Impact</h6>
                                    <p class="mb-0 small">Deleting this department may affect: Employee assignments, Reporting structure, Asset allocations</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <form method="post">
                        <div class="d-flex gap-3 justify-content-center mt-4 pt-3 border-top">
                            <a asp-page="Index" class="btn btn-outline-secondary btn-lg">
                                <i class="fas fa-times me-2"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-danger btn-lg">
                                <i class="fas fa-trash-alt me-2"></i>Confirm Delete
                            </button>
                        </div>
                    </form>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 15px;
        border-width: 2px;
    }

    .card-header {
        border-radius: 13px 13px 0 0 !important;
        background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%) !important;
    }

    .btn-lg {
        padding: 0.75rem 2rem;
        font-weight: 600;
        border-radius: 10px;
    }

    .btn-danger {
        background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
        border: none;
        box-shadow: 0 4px 8px rgba(231, 76, 60, 0.3);
    }

        .btn-danger:hover {
            background: linear-gradient(135deg, #c0392b 0%, #e74c3c 100%);
            transform: translateY(-2px);
            box-shadow: 0 6px 12px rgba(231, 76, 60, 0.4);
        }

    .btn-outline-secondary:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .alert {
        border-radius: 10px;
        border: none;
    }

    .alert-warning {
        background: linear-gradient(135deg, #fff3cd 0%, #ffeaa7 100%);
        border-left: 4px solid #f39c12;
    }

    .alert-danger {
        background: linear-gradient(135deg, #f8d7da 0%, #f5c6cb 100%);
        border-left: 4px solid #e74c3c;
    }

    .bg-light {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%) !important;
    }

    .border-top {
        border-color: #e74c3c !important;
    }

    .text-danger {
        color: #e74c3c !important;
    }

    .fs-5 {
        font-size: 1.25rem !important;
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Add confirmation dialog for extra safety
            $('form').on('submit', function(e) {
                if (!confirm('⚠️ ARE YOU ABSOLUTELY SURE?\n\nDeleting this department will permanently remove it from the system. This action may affect employee records and cannot be undone.')) {
                    e.preventDefault();
                }
            });

            // Add pulse animation to delete button for emphasis
            setInterval(function() {
                $('.btn-danger').toggleClass('pulse');
            }, 2000);
        });
    </script>
}