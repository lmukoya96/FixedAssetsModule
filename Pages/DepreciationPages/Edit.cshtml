@page "{code}"
@model TestModule.Pages.DepreciationPages.EditModel
@{
    ViewData["Title"] = "Edit Depreciation";
}

<div class="row justify-content-center">
    <div class="col-lg-9">
        <div class="card shadow-sm">
            <div class="card-header bg-warning text-dark py-3">
                <h4 class="mb-0">
                    <i class="fas fa-edit me-2"></i>Edit Depreciation Method
                </h4>
            </div>
            <div class="card-body p-4">
                <form method="post" class="needs-validation" novalidate>
                    <!-- Hidden original code -->
                    <input type="hidden" asp-for="OriginalCode" />

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Item.Code" class="form-label fw-semibold">
                                <i class="fas fa-hashtag me-1 text-muted"></i>Code
                            </label>
                            <input asp-for="Item.Code" class="form-control" placeholder="Enter method code" />
                            <span asp-validation-for="Item.Code" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Item.Description" class="form-label fw-semibold">
                                <i class="fas fa-file-alt me-1 text-muted"></i>Description
                            </label>
                            <input asp-for="Item.Description" class="form-control" placeholder="Enter description" />
                            <span asp-validation-for="Item.Description" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Item.DepreciationRate" class="form-label fw-semibold">
                                <i class="fas fa-percentage me-1 text-muted"></i>Depreciation Rate (%)
                            </label>
                            <input asp-for="Item.DepreciationRate" type="number" step="0.01" class="form-control" placeholder="0.00" />
                            <span asp-validation-for="Item.DepreciationRate" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Item.DepreciationMethod" class="form-label fw-semibold">
                                <i class="fas fa-cogs me-1 text-muted"></i>Depreciation Method
                            </label>
                            <input asp-for="Item.DepreciationMethod" class="form-control" placeholder="e.g., Straight-line, Declining balance" />
                            <span asp-validation-for="Item.DepreciationMethod" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Item.TaxRate" class="form-label fw-semibold">
                                <i class="fas fa-percent me-1 text-muted"></i>Tax Rate (%)
                            </label>
                            <input asp-for="Item.TaxRate" type="number" step="0.01" class="form-control" placeholder="0.00" />
                            <span asp-validation-for="Item.TaxRate" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Item.TaxMethod" class="form-label fw-semibold">
                                <i class="fas fa-calculator me-1 text-muted"></i>Tax Method
                            </label>
                            <input asp-for="Item.TaxMethod" class="form-control" placeholder="e.g., Standard, Accelerated" />
                            <span asp-validation-for="Item.TaxMethod" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="d-flex gap-2 justify-content-end mt-4 pt-2 border-top">
                        <a asp-page="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-times me-1"></i>Cancel
                        </a>
                        <button type="submit" class="btn btn-warning">
                            <i class="fas fa-save me-1"></i>Update Depreciation
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Additional Info Card -->
        <div class="card mt-4 border-info">
            <div class="card-header bg-info text-white py-2">
                <h6 class="mb-0">
                    <i class="fas fa-info-circle me-1"></i>Editing Details
                </h6>
            </div>
            <div class="card-body py-3">
                <div class="row">
                    <div class="col-md-12">
                        <small class="text-muted">
                            <i class="fas fa-hashtag me-1"></i>Original Method Code: <strong>@Model.OriginalCode</strong>
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<partial name="_ValidationScriptsPartial" />

<style>
    .form-control:focus {
        border-color: #f39c12;
        box-shadow: 0 0 0 0.2rem rgba(243, 156, 18, 0.25);
    }

    .form-label {
        color: #2c3e50;
        font-weight: 600;
    }

    .card {
        border: none;
        border-radius: 15px;
    }

    .card-header {
        border-radius: 15px 15px 0 0 !important;
    }

    .btn {
        border-radius: 8px;
        padding: 0.5rem 1.5rem;
        font-weight: 600;
    }

    .btn-warning {
        background: linear-gradient(135deg, #f39c12 0%, #e67e22 100%);
        border: none;
        color: white;
    }

        .btn-warning:hover {
            background: linear-gradient(135deg, #e67e22 0%, #f39c12 100%);
            transform: translateY(-2px);
            color: white;
            box-shadow: 0 4px 8px rgba(243, 156, 18, 0.3);
        }

    .btn-outline-secondary:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .bg-warning {
        background: linear-gradient(135deg, #f39c12 0%, #e67e22 100%) !important;
    }

    .border-info {
        border: 1px solid #17a2b8 !important;
    }

    .bg-info {
        background: linear-gradient(135deg, #17a2b8 0%, #2c3e50 100%) !important;
    }

    .border-top {
        border-color: #e9ecef !important;
    }

    input[type="number"] {
        text-align: right;
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Add validation styling
            $('form').on('submit', function() {
                $(this).addClass('was-validated');
            });

            // Add focus effects
            $('.form-control').focus(function() {
                $(this).parent().addClass('focus-shadow');
            }).blur(function() {
                $(this).parent().removeClass('focus-shadow');
            });

            // Format percentage inputs
            $('input[type="number"]').on('blur', function() {
                if (this.value) {
                    this.value = parseFloat(this.value).toFixed(2);
                }
            });
        });
    </script>
}