@page "{code?}"
@model TestModule.Pages.AssetPages.ViewCostModel
@{
    ViewData["Title"] = "View Asset Cost";
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-info">
        @TempData["Message"]
    </div>
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="h3 mb-1 text-info">
            <i class="fas fa-dollar-sign me-2"></i>Asset Cost
        </h2>
        <p class="text-muted mb-0">Cost records for asset: <strong>@Model.AssetCode</strong></p>
    </div>
</div>

<!-- Form for Populate & Export -->
<form method="post">
    <input type="hidden" asp-for="AssetCode" />
    <div asp-validation-summary="All" class="text-danger mb-2"></div>

    <div class="row g-2 align-items-end">
        <div class="col-md-3 col-sm-6">
            <label class="form-label small mb-1">Start Date</label>
            <input asp-for="StartDate" type="date" class="form-control form-control-sm" />
        </div>
        <div class="col-md-3 col-sm-6">
            <label class="form-label small mb-1">End Date</label>
            <input asp-for="EndDate" type="date" class="form-control form-control-sm" />
        </div>

        <div class="col-md-6 text-end">
            <button type="submit" asp-page-handler="Populate" class="btn btn-warning btn-sm me-1">
                <i class="fas fa-database me-1"></i> Populate
            </button>
            <button type="submit" asp-page-handler="Export" class="btn btn-success btn-sm me-1">
                <i class="fas fa-file-csv me-1"></i> Export to CSV
            </button>
            <a asp-page="AllAssetsCostAndDepreciation" asp-route-code="@Model.AssetCode" class="btn btn-secondary btn-sm">
                <i class="fas fa-arrow-left me-1"></i> Go Back
            </a>
        </div>
    </div>
</form>

<!-- Separate form for Export & Send -->
<form method="post" class="mt-3" asp-page-handler="ExportAndSend">
    <input type="hidden" asp-for="AssetCode" />
    <input type="hidden" asp-for="StartDate" />
    <input type="hidden" asp-for="EndDate" />

    <input type="email" asp-for="RecipientEmail" placeholder="Recipient Email"
           class="form-control" style="max-width: 350px;" required />
    <button type="submit" class="btn btn-success mt-2">
        <i class="fas fa-paper-plane me-1"></i> Export & Send
    </button>
</form>

<div class="card shadow-sm border-0 mt-4">
    <div class="card-header bg-info text-white py-3">
        <h5 class="mb-0"><i class="fas fa-history me-2"></i>Cost History</h5>
    </div>
    <div class="card-body p-0">
        @if (Model.CostHistory.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover table-striped mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>Period</th>
                            <th class="text-end">Cost</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.CostHistory)
                        {
                            <tr>
                                <td>@item.Period</td>
                                <td class="text-end fw-bold text-success">@item.Cost.ToString("C")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-4">
                <i class="fas fa-search-dollar fa-2x text-muted mb-2"></i>
                <p class="text-muted">No records found for the selected range</p>
            </div>
        }
    </div>
</div>