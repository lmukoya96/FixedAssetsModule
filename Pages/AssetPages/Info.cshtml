@page "{code}"
@model TestModule.Pages.AssetPages.InfoModel
@{
    ViewData["Title"] = "Asset Information";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .card {
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
        }

        .card-header {
            border-bottom: 2px solid rgba(255,255,255,0.2) !important;
            background: linear-gradient(135deg, #17a2b8 0%, #2c3e50 100%) !important;
        }

        .info-card {
            transition: all 0.3s ease;
            border-radius: 10px;
            border: 1px solid rgba(0,0,0,0.1);
        }

            .info-card:hover {
                transform: translateY(-3px);
                box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
            }

        .section-title {
            border-left: 4px solid #17a2b8;
            padding-left: 10px;
            margin: 25px 0 15px 0;
            color: #2c3e50;
        }

        dt {
            font-weight: 600;
            color: #495057;
        }

        dd {
            color: #212529;
            margin-bottom: 0.8rem;
        }

        .value-highlight {
            font-weight: 600;
            color: #17a2b8;
        }

        .status-badge {
            font-size: 0.8rem;
            padding: 0.35em 0.65em;
        }

        .action-btn {
            border-radius: 8px;
            padding: 0.5rem 1rem;
            font-weight: 500;
            transition: all 0.2s ease;
        }

            .action-btn:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            }

        .detail-row {
            border-bottom: 1px solid #f1f1f1;
            padding: 0.75rem 0;
        }

            .detail-row:last-child {
                border-bottom: none;
            }
    </style>
</head>
<body>
    <div class="container py-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h2 class="h3 mb-1 text-primary">
                    <i class="fas fa-info-circle me-2"></i>Asset Information
                </h2>
                <p class="text-muted mb-0">Detailed view of asset properties and status</p>
            </div>
        </div>
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <a asp-page="AssetRevaluation" asp-route-code="@Model.Asset?.Code" class="btn btn-primary action-btn me-2">
                    <i class="fas fa-exchange-alt me-1"></i> Revalue Asset
                </a>
                <a asp-page="AssetDepreciation" asp-route-code="@Model.Asset?.Code" class="btn btn-primary action-btn me-2">
                    <i class="fas fa-exchange-alt me-1"></i> View Asset Depreciation
                </a>
                <a asp-page="AssetTransactions" asp-route-code="@Model.Asset?.Code" class="btn btn-primary action-btn me-2">
                    <i class="fas fa-exchange-alt me-1"></i> View Transactions
                </a>

                <a asp-page="AssetCost" asp-route-code="@Model.Asset?.Code" class="btn btn-primary action-btn me-2">
                    <i class="fas fa-dollar-sign me-1"></i> View Cost
                </a>
                <a asp-page="Index" class="btn btn-secondary action-btn">
                    <i class="fas fa-arrow-left me-1"></i> Back to List
                </a>
            </div>
       </div>

        @if (Model.Asset != null)
        {
            <div class="row">
                <!-- Main Asset Information -->
                <div class="col-lg-8">
                    <div class="card shadow-sm border-0 mb-4">
                        <div class="card-header bg-primary text-white py-3">
                            <div class="d-flex justify-content-between align-items-center">
                                <h5 class="mb-0">
                                    <i class="fas fa-cube me-2"></i>Asset Details
                                </h5>
                                <span class="badge bg-light text-dark status-badge">
                                    <i class="fas fa-barcode me-1"></i>@Model.Asset.Code
                                </span>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="detail-row">
                                        <dt><i class="fas fa-font me-1 text-muted"></i>Description</dt>
                                        <dd class="value-highlight">@Model.Asset.Description</dd>
                                    </div>
                                    <div class="detail-row">
                                        <dt><i class="fas fa-layer-group me-1 text-muted"></i>Asset Group</dt>
                                        <dd>@Model.Asset.AssetGroup</dd>
                                    </div>
                                    <div class="detail-row">
                                        <dt><i class="fas fa-tag me-1 text-muted"></i>Category</dt>
                                        <dd>@Model.Asset.AssetCategory</dd>
                                    </div>
                                    <div class="detail-row">
                                        <dt><i class="fas fa-building me-1 text-muted"></i>Department</dt>
                                        <dd>@Model.Asset.Department</dd>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="detail-row">
                                        <dt><i class="fas fa-map-marker-alt me-1 text-muted"></i>Location</dt>
                                        <dd>@Model.Asset.Location</dd>
                                    </div>
                                    <div class="detail-row">
                                        <dt><i class="fas fa-barcode me-1 text-muted"></i>Tracking Code</dt>
                                        <dd>@Model.Asset.TrackingCode</dd>
                                    </div>
                                    <div class="detail-row">
                                        <dt><i class="fas fa-hashtag me-1 text-muted"></i>Serial Number</dt>
                                        <dd>@Model.Asset.SerialNumber</dd>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Financial Information -->
                <div class="col-lg-4">
                    <div class="card shadow-sm border-0 mb-4">
                        <div class="card-header bg-info text-white py-3">
                            <h5 class="mb-0">
                                <i class="fas fa-money-bill-wave me-2"></i>Financial Details
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="detail-row">
                                <dt><i class="fas fa-shopping-cart me-1 text-muted"></i>Purchase Amount</dt>
                                <dd class="value-highlight">@Model.Asset.PurchaseAmount.ToString("C")</dd>
                            </div>
                            <div class="detail-row">
                                <dt><i class="fas fa-dollar-sign me-1 text-muted"></i>Cost</dt>
                                <dd class="value-highlight">@Model.Asset.Cost.ToString("C")</dd>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Dates Information -->
            <div class="row">
                <div class="col-12">
                    <div class="card shadow-sm border-0">
                        <div class="card-header bg-secondary text-white py-3">
                            <h5 class="mb-0">
                                <i class="fas fa-calendar-alt me-2"></i>Date Information
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="detail-row">
                                        <dt><i class="fas fa-calendar-day me-1 text-muted"></i>Purchase Date</dt>
                                        <dd>@Model.Asset.PurchaseDate.ToShortDateString()</dd>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="detail-row">
                                        <dt><i class="fas fa-hourglass-start me-1 text-muted"></i>Depreciation Start</dt>
                                        <dd>@Model.Asset.DepreciationStartDate.ToShortDateString()</dd>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="detail-row">
                                        <dt><i class="fas fa-exchange-alt me-1 text-muted"></i>Transaction Date</dt>
                                        <dd>@(Model.Asset.TransactionDate?.ToShortDateString() ?? "N/A")</dd>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--
                    <div>
                        <a asp-page="ScrapAsset" asp-route-code="@Model.Asset?.Code" class="btn btn-danger action-btn me-2">
                            <i class="fas fa-trash-alt me-1"></i> Scrap Asset
                        </a>
                    </div>
                    <br />
                    -->
                </div>
            </div>
        }
        else
        {
            <div class="card shadow-sm border-0">
                <div class="card-body text-center py-5">
                    <i class="fas fa-exclamation-circle fa-4x text-muted mb-3"></i>
                    <h4 class="text-muted">Asset Not Found</h4>
                    <p class="text-muted">The requested asset could not be found in the system.</p>
                    <a asp-page="Index" class="btn btn-primary mt-2">
                        <i class="fas fa-arrow-left me-2"></i>Return to Asset List
                    </a>
                </div>
            </div>
        }
    </div>
    <br />

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Add any custom JavaScript functionality here if needed
        });
    </script>
</body>
</html>