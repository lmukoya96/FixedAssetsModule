@page
@model TestModule.Pages.AssetPages.AllAssetsDepreciationModel
@{
    ViewData["Title"] = "Assets Depreciation";
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-info">
        @TempData["Message"]
    </div>
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="h3 mb-1 text-primary">
            <i class="fas fa-chart-line me-2"></i>Assets Depreciation
        </h2>
        <p class="text-muted mb-0">Filter assets by category or date range and view their depreciation</p>
    </div>
    <div>
        <a asp-page="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i> Back to Assets List
        </a>
    </div>
</div>

<!-- Filters Card -->
<div class="card shadow-sm border-0 mb-4">
    <div class="card-header bg-light py-3">
        <h6 class="mb-0"><i class="fas fa-filter me-2"></i>Filters</h6>
    </div>
    <div class="card-body">
        <form method="get" class="row g-3 align-items-end">
            <!-- Category Filter -->
            <div class="col-md-3">
                <label class="form-label fw-semibold">Asset Category</label>
                <select asp-for="SelectedCategory" asp-items="Model.AssetCategories" class="form-select" onchange="this.form.submit()">
                    <option value="">-- All Categories --</option>
                </select>
            </div>

            <!-- Date Range Filters -->
            <div class="col-md-2">
                <label class="form-label fw-semibold">Start Date</label>
                <input asp-for="StartDate" type="date" class="form-control" onchange="this.form.submit()" />
            </div>
            <div class="col-md-2">
                <label class="form-label fw-semibold">End Date</label>
                <input asp-for="EndDate" type="date" class="form-control" onchange="this.form.submit()" />
            </div>

            <!-- Export Buttons -->
            <div class="col-md-5">
                <label class="form-label fw-semibold">Export Options</label>
                <div class="d-flex gap-2">
                    <a asp-page-handler="ExportCsv"
                       asp-route-selectedCategory="@Model.SelectedCategory"
                       asp-route-startDate="@Model.StartDate?.ToString("yyyy-MM-dd")"
                       asp-route-endDate="@Model.EndDate?.ToString("yyyy-MM-dd")"
                       class="btn btn-outline-info flex-fill">
                        <i class="fas fa-download me-1"></i> CSV
                    </a>
                    <button type="button" class="btn btn-outline-warning flex-fill" data-bs-toggle="modal" data-bs-target="#emailModal">
                        <i class="fas fa-envelope me-1"></i> Email
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Email Modal -->
<div class="modal fade" id="emailModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="ExportAndSend">
                <div class="modal-header">
                    <h5 class="modal-title">Send via Email</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Email Address</label>
                        <input asp-for="EmailAddress" class="form-control" placeholder="Enter recipient email" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-warning">
                        <i class="fas fa-paper-plane me-1"></i> Export & Send
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Depreciation Table -->
<div class="card shadow-sm border-0">
    <div class="card-header bg-primary text-white py-3">
        <h5 class="mb-0"><i class="fas fa-list me-2"></i>Depreciation List</h5>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover table-striped mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>Asset Code</th>
                        <th>Description</th>
                        <th class="text-end">Total Depreciation</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.DepreciationData != null && Model.DepreciationData.Count > 0)
                    {
                        foreach (var row in Model.DepreciationData)
                        {
                            <tr>
                                <td class="fw-semibold text-primary">@row["AssetCode"]</td>
                                <td>@row["Description"]</td>
                                <td class="text-end">@string.Format("{0:C}", row["TotalDepreciation"])</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="3" class="text-center text-muted py-4">
                                <i class="fas fa-box-open fa-2x mb-2"></i>
                                <div>No depreciation data available</div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>