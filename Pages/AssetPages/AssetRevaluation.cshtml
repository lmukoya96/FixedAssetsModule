@page "{code}"
@model TestModule.Pages.AssetPages.AssetRevaluationModel
@{
    ViewData["Title"] = "Revalue Asset";
}

<div class="container py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="h3 mb-1 text-primary">
                <i class="fas fa-exchange-alt me-2"></i> Revalue Asset
            </h2>
            <p class="text-muted mb-0">Update asset cost for a specific period</p>
        </div>
        <div>
            <a asp-page="Info" asp-route-code="@Model.AssetCode" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-1"></i> Back to Asset
            </a>
        </div>
    </div>

    <!-- Success/Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Asset != null)
    {
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-primary text-white py-3">
                        <h5 class="mb-0">
                            <i class="fas fa-cube me-2"></i> Asset Revaluation - @Model.Asset.Code
                        </h5>
                    </div>
                    <div class="card-body">
                        <!-- Asset Summary -->
                        <div class="alert alert-info mb-4">
                            <div class="row">
                                <div class="col-md-6">
                                    <strong>Asset Code:</strong> @Model.Asset.Code<br>
                                    <strong>Description:</strong> @Model.Asset.Description
                                </div>
                                <div class="col-md-6">
                                    <strong>Current Cost:</strong> <span class="text-success">@Model.CurrentCost.ToString("C")</span><br>
                                    <strong>Asset Group:</strong> @Model.Asset.AssetGroup
                                </div>
                            </div>
                        </div>

                        <form method="post" asp-antiforgery="true">
                            <input type="hidden" asp-for="AssetCode" />

                            <!-- Period Selection -->
                            <div class="mb-3">
                                <label asp-for="SelectedPeriod" class="form-label">
                                    <i class="fas fa-calendar-alt me-1"></i> Revaluation Period
                                </label>
                                @if (Model.PeriodOptions.Any())
                                {
                                    <select asp-for="SelectedPeriod" asp-items="Model.PeriodOptions" class="form-select">
                                        <option value="">-- Select Period --</option>
                                    </select>
                                }
                                else
                                {
                                    <div class="alert alert-warning">
                                        <i class="fas fa-exclamation-triangle me-2"></i>
                                        No periods found for this asset. Please ensure cost records exist.
                                    </div>
                                }
                                <span asp-validation-for="SelectedPeriod" class="text-danger"></span>
                                <small class="form-text text-muted">Select the period from which to start the revaluation</small>
                            </div>

                            <!-- New Cost -->
                            <div class="mb-3">
                                <label asp-for="NewCost" class="form-label">
                                    <i class="fas fa-dollar-sign me-1"></i> New Cost
                                </label>
                                <input asp-for="NewCost" type="number" step="0.01" min="0.01" class="form-control"
                                       placeholder="Enter new cost amount" />
                                <span asp-validation-for="NewCost" class="text-danger"></span>
                                <small class="form-text text-muted">Current cost: @Model.CurrentCost.ToString("C")</small>
                            </div>

                            <!-- Submit Button -->
                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary btn-lg"
                                        @(Model.PeriodOptions.Any() ? "" : "disabled")>
                                    <i class="fas fa-check-circle me-2"></i> Confirm Revaluation
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card shadow-sm border-0">
            <div class="card-body text-center py-5">
                <i class="fas fa-exclamation-circle fa-4x text-muted mb-3"></i>
                <h4 class="text-muted">Asset Not Found</h4>
                <p class="text-muted">The requested asset could not be found in the system.</p>
                <a asp-page="Index" class="btn btn-primary mt-2">
                    <i class="fas fa-arrow-left me-2"></i>Return to Asset List
                </a>
            </div>
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Format currency input
            const costInput = document.getElementById('NewCost');
            if (costInput) {
                costInput.addEventListener('blur', function() {
                    if (this.value) {
                        this.value = parseFloat(this.value).toFixed(2);
                    }
                });
            }

            // Add confirmation dialog for form submission
            const form = document.querySelector('form');
            if (form) {
                form.addEventListener('submit', function(e) {
                    const newCost = parseFloat(document.getElementById('NewCost').value);
                    const currentCost = @Model.CurrentCost;
                    const selectedPeriod = document.getElementById('SelectedPeriod').value;

                    if (!selectedPeriod) {
                        alert('Please select a period for revaluation.');
                        e.preventDefault();
                        return;
                    }

                    if (newCost !== currentCost) {
                        const confirmation = confirm(`Are you sure you want to change the cost from ${currentCost.toFixed(2)} to ${newCost.toFixed(2)} starting from period ${selectedPeriod}? This will affect all future depreciation calculations.`);
                        if (!confirmation) {
                            e.preventDefault();
                        }
                    }
                });
            }
        });
    </script>
}