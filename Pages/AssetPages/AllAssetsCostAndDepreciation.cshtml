@page
@model TestModule.Pages.AssetPages.AllAssetsCostAndDepreciationModel
@{
    ViewData["Title"] = "Assets Cost by Category";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="h3 mb-1 text-primary">
            <i class="fas fa-coins me-2"></i>Assets Cost
        </h2>
        <p class="text-muted mb-0">Filter assets by category and view their costs</p>
    </div>
    <div>
        <a asp-page="Index" class="btn btn-secondary action-btn">
            <i class="fas fa-arrow-left me-1"></i> Back to Assets List
        </a>
    </div>
</div>

<!-- Category Dropdown -->
<form method="get" class="mb-4">
    <div class="row g-2 align-items-center">
        <div class="col-md-4">
            <select asp-for="SelectedCategory" asp-items="Model.AssetCategories" class="form-select" onchange="this.form.submit()">
                <option value="">-- Select Category --</option>
            </select>
        </div>
    </div>
</form>

<!-- Assets Table -->
<div class="card shadow-sm border-0">
    <div class="card-header bg-primary text-white py-3">
        <h5 class="mb-0">
            <i class="fas fa-list me-2"></i>Assets List
        </h5>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover table-striped mb-0">
                <thead class="table-dark">
                    <tr>
                        <th><i class="fas fa-hashtag me-1"></i>Code</th>
                        <th><i class="fas fa-file-alt me-1"></i>Description</th>
                        <th><i class="fas fa-layer-group me-1"></i>Group</th>
                        <th><i class="fas fa-building me-1"></i>Department</th>
                        <th><i class="fas fa-map-marker-alt me-1"></i>Location</th>
                        <th class="text-center"><i class="fas fa-calendar me-1"></i>Purchase Date</th>
                        <th class="text-center"><i class="fas fa-money-bill me-1"></i>Cost</th>
                        <th class="text-center"><i class="fas fa-cogs me-1"></i>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Assets.Any())
                    {
                        foreach (var item in Model.Assets)
                        {
                            <tr class="align-middle">
                                <td class="fw-semibold text-primary">@item.Code</td>
                                <td>@item.Description</td>
                                <td><span class="badge bg-secondary">@item.AssetGroup</span></td>
                                <td>@item.Department</td>
                                <td>@item.Location</td>
                                <td class="text-center">@item.PurchaseDate.ToString("dd MMM yy")</td>
                                <td class="text-end fw-bold text-success">@item.Cost.ToString("C")</td>
                                <td class="text-center">
                                    <!-- View Cost -->
                                    <a asp-page="ViewCost" asp-route-code="@item.Code" class="btn btn-outline-success btn-sm me-1">
                                        <i class="fas fa-coins me-1"></i> Cost
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center text-muted py-4">
                                <i class="fas fa-box-open fa-2x mb-2"></i>
                                <div>No assets found for this category</div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>