@page
@model TestModule.Pages.AssetPages.ScrapAssetModel
@{
    ViewData["Title"] = "Scrap Asset";
}

<div class="container py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="h3 mb-1 text-danger">
                <i class="fas fa-trash-alt me-2"></i> Scrap Asset
            </h2>
            <p class="text-muted mb-0">Permanently remove asset from service</p>
        </div>
        <div>
            <a asp-page="Info" asp-route-code="@Model.AssetCode" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-1"></i> Back to Asset
            </a>
        </div>
    </div>

    <!-- Success/Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Card -->
    <div class="card shadow-sm border-0">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0">
                <i class="fas fa-exclamation-triangle me-2"></i> Confirm Asset Scrapping
            </h5>
        </div>
        <div class="card-body">
            @if (Model.Asset != null)
            {
                <!-- Warning -->
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-circle me-2"></i>
                    <strong>Warning:</strong> This action cannot be undone. The asset will be permanently removed from service starting from the selected period.
                </div>

                <!-- Asset Details -->
                <div class="row mb-4">
                    <div class="col-md-6">
                        <h6>Asset Details</h6>
                        <p><strong>Code:</strong> @Model.Asset.Code</p>
                        <p><strong>Description:</strong> @Model.Asset.Description</p>
                        <p><strong>Current Cost:</strong> @Model.Asset.Cost.ToString("C")</p>
                    </div>
                    <div class="col-md-6">
                        <h6>Scrapping Details</h6>
                        <p><strong>Scrap Date:</strong> @DateTime.Today.ToShortDateString()</p>
                        <p><strong>Current Period:</strong> @Model.CurrentPeriodString</p>
                    </div>
                </div>

                <!-- Form -->
                <form method="post" asp-antiforgery="true">
                    <input type="hidden" asp-for="AssetCode" />

                    <!-- Period Selection -->
                    <div class="mb-3">
                        <label asp-for="SelectedPeriod" class="form-label">
                            <i class="fas fa-calendar-alt me-1"></i> Scrapping Period
                        </label>
                        @if (Model.PeriodOptions.Any())
                        {
                            <select asp-for="SelectedPeriod" asp-items="Model.PeriodOptions" class="form-select">
                                <option value="">-- Select Period --</option>
                            </select>
                        }
                        else
                        {
                            <div class="alert alert-warning">
                                <i class="fas fa-exclamation-triangle me-2"></i>
                                No periods found for this asset. Please ensure cost records exist.
                            </div>
                        }
                        <span asp-validation-for="SelectedPeriod" class="text-danger"></span>
                        <small class="form-text text-muted">Select the period from which to start scrapping the asset</small>
                    </div>

                    <div class="form-check mb-4">
                        <input asp-for="ConfirmScrapping" class="form-check-input" type="checkbox" />
                        <label asp-for="ConfirmScrapping" class="form-check-label">
                            I confirm that I want to permanently scrap this asset. This action cannot be undone.
                        </label>
                        <span asp-validation-for="ConfirmScrapping" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-danger btn-lg"
                                @(Model.PeriodOptions.Any() ? "" : "disabled")>
                            <i class="fas fa-trash-alt me-2"></i> Confirm Scrap Asset
                        </button>
                    </div>
                </form>
            }
            else
            {
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-circle me-2"></i> Asset not found.
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Add confirmation dialog for form submission
            const form = document.querySelector('form');
            if (form) {
                form.addEventListener('submit', function(e) {
                    const selectedPeriod = document.getElementById('SelectedPeriod');
                    if (!selectedPeriod || !selectedPeriod.value) {
                        alert('Please select a period for scrapping.');
                        e.preventDefault();
                        return;
                    }

                    const confirmation = confirm(`Are you sure you want to scrap this asset starting from period ${selectedPeriod.value}? This action cannot be undone and will permanently remove the asset from service.`);
                    if (!confirmation) {
                        e.preventDefault();
                    }
                });
            }
        });
    </script>
}