@section Scripts {
    <script>
        $(document).ready(function() {
            // Add validation styling
            $('form').on('submit', function() {
                $(this).addClass('was-validated');
            });

            // Add focus effects
            $('.form-control, .form-select').focus(function() {
                $(this).parent().addClass('focus-shadow');
            }).blur(function() {
                $(this).parent().removeClass('focus-shadow');
            });

            // Auto-format group code to uppercase
            $('#Item_GroupCode').on('blur', function() {
                this.value = this.value.toUpperCase().replace(/\s+/g, '-');
            });

            // Auto-capitalize group description
            $('#Item_GroupDescription').on('blur', function() {
                if (this.value) {
                    this.value = this.value.replace(/\w\S*/g, function(txt) {
                        return txt.charAt(0).toUpperCase() + txt.substr(1).toLowerCase();
                    });
                }
            });

            // Auto-format depreciation code to uppercase
            $('#Item_DepreciationCode').on('blur', function() {
                this.value = this.value.toUpperCase();
            });

            // Enhance select dropdowns with search
            $('.form-select').each(function() {
                $(this).select2({
                    placeholder: $(this).find('option:first').text(),
                    width: '100%',
                    theme: 'bootstrap-5'
                });
            });
        });
    </script>
}

