@page
@model TestModule.Pages.AssetGroupPages.CreateModel
@{
    ViewData["Title"] = "Create Asset Group";
}

<div class="row justify-content-center">
    <div class="col-lg-10">
        <div class="card shadow-sm">
            <div class="card-header bg-success text-white py-3">
                <h4 class="mb-0">
                    <i class="fas fa-plus-circle me-2"></i>Create New Asset Group
                </h4>
            </div>
            <div class="card-body p-4">
                <form method="post" class="needs-validation" novalidate>
                    <!-- Basic Information -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <h5 class="text-primary mb-3">
                                <i class="fas fa-info-circle me-2"></i>Basic Information
                            </h5>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Item.GroupCode" class="form-label fw-semibold">
                                <i class="fas fa-hashtag me-1 text-muted"></i>Group Code
                            </label>
                            <input asp-for="Item.GroupCode" class="form-control" placeholder=""/>
                            <span asp-validation-for="Item.GroupCode" class="text-danger small"></span>
                            <div class="form-text">Unique identifier for the asset group</div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Item.GroupDescription" class="form-label fw-semibold">
                                <i class="fas fa-file-alt me-1 text-muted"></i>Group Description
                            </label>
                            <input asp-for="Item.GroupDescription" class="form-control" placeholder="" />
                            <span asp-validation-for="Item.GroupDescription" class="text-danger small"></span>
                            <div class="form-text">Descriptive name for the asset group</div>
                        </div>
                    </div>

                    <!-- Financial Accounts -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <h5 class="text-primary mb-3">
                                <i class="fas fa-money-bill-wave me-2"></i>Financial Accounts
                            </h5>
                            <p class="text-muted small mb-3">Select ledger accounts for each financial operation</p>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Item.Cost" class="form-label fw-semibold">
                                <i class="fas fa-money-bill me-1 text-muted"></i>Cost Account
                            </label>
                            <select asp-for="Item.Cost" asp-items="Model.LedgerOptions" class="form-select">
                                <option value="">-- Select Cost Account --</option>
                            </select>
                            <span asp-validation-for="Item.Cost" class="text-danger small"></span>
                            <div class="form-text">Fixed Asset account for initial cost</div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Item.AccDeprn" class="form-label fw-semibold">
                                <i class="fas fa-chart-line me-1 text-muted"></i>Accumulated Depreciation
                            </label>
                            <select asp-for="Item.AccDeprn" asp-items="Model.LedgerOptions" class="form-select">
                                <option value="">-- Select Accumulated Depreciation --</option>
                            </select>
                            <span asp-validation-for="Item.AccDeprn" class="text-danger small"></span>
                            <div class="form-text">Contra-asset account for accumulated depreciation</div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Item.Depreciation" class="form-label fw-semibold">
                                <i class="fas fa-calculator me-1 text-muted"></i>Depreciation Expense
                            </label>
                            <select asp-for="Item.Depreciation" asp-items="Model.LedgerOptions" class="form-select">
                                <option value="">-- Select Depreciation Expense --</option>
                            </select>
                            <span asp-validation-for="Item.Depreciation" class="text-danger small"></span>
                            <div class="form-text">Expense account for depreciation charges</div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Item.Revaluation" class="form-label fw-semibold">
                                <i class="fas fa-sync-alt me-1 text-muted"></i>Revaluation Account
                            </label>
                            <select asp-for="Item.Revaluation" asp-items="Model.LedgerOptions" class="form-select">
                                <option value="">-- Select Revaluation Account --</option>
                            </select>
                            <span asp-validation-for="Item.Revaluation" class="text-danger small"></span>
                            <div class="form-text">Equity or reserve account for revaluation</div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Item.Disposal" class="form-label fw-semibold">
                                <i class="fas fa-trash me-1 text-muted"></i>Disposal Account
                            </label>
                            <select asp-for="Item.Disposal" asp-items="Model.LedgerOptions" class="form-select">
                                <option value="">-- Select Disposal Account --</option>
                            </select>
                            <span asp-validation-for="Item.Disposal" class="text-danger small"></span>
                            <div class="form-text">Gain/Loss account for asset disposals</div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Item.Scrapping" class="form-label fw-semibold">
                                <i class="fas fa-ban me-1 text-muted"></i>Scrapping Account
                            </label>
                            <select asp-for="Item.Scrapping" asp-items="Model.LedgerOptions" class="form-select">
                                <option value="">-- Select Scrapping Account --</option>
                            </select>
                            <span asp-validation-for="Item.Scrapping" class="text-danger small"></span>
                            <div class="form-text">Loss account for asset scrapping</div>
                        </div>
                    </div>

                    <!-- Depreciation Settings -->
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Item.DepreciationCode" class="form-label fw-semibold">
                                <i class="fas fa-code me-1 text-muted"></i>Depreciation Code
                            </label>
                            <input asp-for="Item.DepreciationCode" class="form-control" placeholder="" />
                            <span asp-validation-for="Item.DepreciationCode" class="text-danger small"></span>
                            <div class="form-text">Link to depreciation </div>
                        </div>
                    </div>

                    <div class="d-flex gap-2 justify-content-end mt-4 pt-2 border-top">
                        <a asp-page="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-times me-1"></i>Cancel
                        </a>
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-save me-1"></i>Create Asset Group
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<partial name="_ValidationScriptsPartial" />

